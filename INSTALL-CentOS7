Install NGINX
Yum –y install epel-release 
Yum –y install nginx 

Install PHP for v7 
yum -y install wget yum-utils 
wget -q http://rpms.remirepo.net/enterprise/remi-release-7.rpm 
wget -q https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm 
rpm -i remi-release-7.rpm epel-release-latest-7.noarch.rpm 
yum-config-manager --enable remi-php70 
yum -y install php-fpm php 

Install mariaDB 
Yum –y install mariadb mariadb-server 

CREATE DATABASE wordpress DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci; 
CREATE USER wordpressuser@localhost IDENTIFIED BY 'asdf1234*'; 
GRANT ALL ON wordpress.* TO 'wordpressuser'@'localhost' IDENTIFIED BY 'asdf1234*'; 
FLUSH PRIVILEGES; 
